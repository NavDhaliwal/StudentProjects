<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/LinearLayout01"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView 
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:scrollbarFadeDuration="1"
    >

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    >
<!-- Dummy item to prevent Edit Text from receiving focus -->
  <LinearLayout
    android:focusable="true" android:focusableInTouchMode="true"
    android:layout_width="0px" android:layout_height="0px"/>
    <TextView
    android:id="@+id/t1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="First Name*"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    android:focusable="true"
    android:nextFocusUp="@id/t1" 
  android:nextFocusLeft="@id/t1"
  
    />
    <EditText
    android:id="@+id/ed1"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_marginTop="5dip"
    android:layout_below="@id/t1"
    
    /> 
   
    <TextView
    android:id="@+id/t2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Middle Name"
    android:layout_below="@id/ed1"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
    <EditText
    android:id="@+id/ed2"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t2"
    android:layout_marginTop="8dip"
    />

    <TextView
    android:id="@+id/t3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Last Name*"
    android:layout_below="@id/ed2"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
    <EditText
    android:id="@+id/ed3"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t3"
    android:layout_marginTop="8dip"
    />  
    
    <Spinner
    android:id="@+id/sp2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:prompt="@string/Degree1"
    android:layout_below="@id/ed3"
    android:layout_marginTop="15dip"
    />
  
   <Spinner
    android:id="@+id/sp3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawSelectorOnTop="true"
    android:prompt="@string/Spec1."
    android:layout_below="@id/sp2"
    android:layout_marginTop="15dip"
    />
    
    <TextView
    android:id="@+id/t4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Father Name*"
    android:layout_below="@id/sp3"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dp"
    />
    <EditText
    android:id="@+id/ed4"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t4"
    android:layout_marginTop="8dip"
    />
    
    <TextView
    android:id="@+id/t5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Mother Name*"
    android:layout_below="@id/ed4"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
    <EditText
    android:id="@+id/ed5"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t5"
    android:layout_marginTop="8dip"
    />
    
    <TextView
    android:id="@+id/t6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Date of Birth*"
    android:layout_below="@id/ed5"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
   <EditText
    android:id="@+id/ed6"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t6"
    android:layout_marginTop="8dip"
    />
   
   <TextView
    android:id="@+id/t7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Email Id*"
    android:layout_below="@id/ed6"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
   <EditText
    android:id="@+id/ed7"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:layout_below="@id/t7"
    android:layout_marginTop="8dip"
    />
    
   <TextView
    android:id="@+id/t8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Contact No"
    android:layout_below="@id/ed7"
    android:textSize="15dp"
    android:textColor="#FF0000"
    android:textStyle="bold"
    android:layout_marginTop="15dip"
    />
   <EditText
    android:id="@+id/ed8"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:numeric="integer"
    android:layout_below="@id/t8"
    android:layout_marginTop="8dip"
    />
    
    
      
   
</RelativeLayout>
</ScrollView>
</LinearLayout>